{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "KEEGArticleBundle::layout.html.twig" %}

{% block title %}
	{% if section is same as ('Temoignages') %}
		{{ article.temoin }} - {{ parent() }}
	{% else %}
		{{ article.titre }} - {{ parent() }}
	{% endif %}
	
{% endblock %}

{% block keegarticle_body %}

	{# On vérifie qu'une image est bien associée à l'annonce 
	{% if article.image is not null %}
		<img src="{{ article.image.url }}" alt="{{ article.image.alt }}" />
	{% endif %}
	#}
	
  	{%if section is same as ('Article')%}
	
		<h2>{{ article.titre }}</h2>
		<i>Par {{ article.auteur }}, le {{article.date|date('d/m/Y')}}</i>

		<div class="well">
			{{ article.content }}
		</div>
	
	{% elseif section is same as ('News') %}
	
		<h2>{{ article.titre }}</h2>
		<i>Le {{article.date|date('d/m/Y')}}</i>

		<div class="well">
			{{ article.content }}
		</div>
	
	{% elseif section is same as ('Temoignages') %}
	
		<h2>{{ article.temoin }}</h2>
		<i>Le {{article.date|date('d/m/Y')}}</i>

		<div class="well">
			{{ article.content }}
		</div>

	{% endif %}
	
	
	<p class="text-right">
		<a href="{{ path('keeg_website_homepage') }}" class="btn btn-default">
			<i class="glyphicon glyphicon-chevron-left"></i>
				Retour à l'accueil
		</a>

		{#
		<a href="{{ path('keeg_forum_edit', {'id': article.id}) }}" class="btn btn-default">
			<i class="glyphicon glyphicon-edit"></i>
		    Modifier l'annonce
		</a>
		<a href="{{ path('keeg_forum_delete', {'id': article.id}) }}" class="btn btn-danger">
		    <i class="glyphicon glyphicon-trash"></i>
		    Supprimer l'annonce
		</a>

		#}
	</p>
	
{% endblock %}