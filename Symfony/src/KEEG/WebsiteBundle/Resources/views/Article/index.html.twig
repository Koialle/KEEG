{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{% extends "KEEGWebsiteBundle::admin.html.twig" %}

{% block title %}
  Index {{ parent() }}
{% endblock %}

{% block messages_flash %}
  {% for message in app.session.flashbag.get('admin') %}
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Message flash : {{ message }}
    </div>
  {% endfor %}
{% endblock %}

{% block admin_body %}

	<h2>Panel d'administration</h2><hr>
	
	<a href="{{ path('keeg_admin_articles_add') }}">
		<button type="button" class="btn btn-default btn-lg">
			<span class=" glyphicon glyphicon-tag" aria-hidden="true"></span> Nouvel article
		</button>
	</a>

	<h3> Liste des articles </h3>
	
	{% if listeItems|length > 0 %}
		<ul>
			{% for article in listeItems %}

				<li>
					<a href="{{ path('keeg_admin_articles_view', {'id': article.id}) }}">
						{{ article.titre }}
					</a>
				</li>
				
			{% endfor %}
		</ul>

	{% else %}

		Aucun article n'a été trouvé.

	{% endif %}


{% endblock %}