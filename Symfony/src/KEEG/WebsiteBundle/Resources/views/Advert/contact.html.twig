{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{% extends "KEEGWebsiteBundle::structure_contact_about.html.twig" %}



{% block messages_flash %}
  {% for message in app.session.flashbag.get('accueil') %}
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Message flash : {{ message }}
    </div>
  {% endfor %}
{% endblock %}
    
    {% block body %}
    	<div class="row">
			<div id="content" class="col-lg-12 col-md-12">
				<h3>
					<center>
						Questions ? Suggestions ?
					</center>
				</h3>
				<br />

				<div class="container-fluid well">
					<div class="col-lg-8 col-md-8 col-lg-offset-2 col-md-offset-2">
						{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

						{{ form_errors(form) }}

						<div class="col-lg-6">
							<div class="form-group">
								{{ form_label(form.title,"Objet du mail",{'label_attr':{'class': 'col-lg-3 control-label'}}) }}
								{{ form_errors(form.title) }}
								
								<div class="col-lg-4">
									{{ form_widget(form.title, {'attr': {'class':'form-control'}}) }}
								</div>
							</div>	
						</div>
						
						<div class="col-lg-12">
							{{ form_errors(form) }}
							<div class="form-group">
								{{ form_label(form.content,"Contenu du mail",{'label_attr':{'class': 'col-lg-3 control-label'}}) }}
								{{ form_errors(form.content) }}
								
								<div class="col-lg-4">
									{{ form_widget(form.content, {'attr': {'class':'form-control'}}) }}
								</div>
							</div>	
						</div>
							
						<div class="col-lg-12">
							{{ form_errors(form) }}
							<div class="form-group">
								{{ form_label(form.name,"Votre pr√©nom",{'label_attr':{'class': 'col-lg-3 control-label'}}) }}
								{{ form_errors(form.name) }}
								
								<div class="col-lg-4">
									{{ form_widget(form.name, {'attr': {'class':'form-control'}}) }}
								</div>
							</div>	
						</div>
						
						<div class="col-lg-12">
							{{ form_errors(form) }}
							<div class="form-group">
								{{ form_label(form.mail,"Votre e-mail",{'label_attr':{'class': 'col-lg-3 control-label'}}) }}
								{{ form_errors(form.mail) }}
								
								<div class="col-lg-4 ">
									{{ form_widget(form.mail, {'attr': {'class':'form-control'}}) }}
								</div>
							</div>	
						</div>
						
						<div class="col-lg-12">
							<div class="col-lg-4 col-lg-offset-6">
								{{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
							</div>
						</div>
						
						{{ form_rest(form) }}
						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>

	{% endblock %}

	