{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{% extends "KEEGWebsiteBundle::layout.html.twig" %}

{% block title %}
	Accueil {{ parent() }}
{% endblock %}

{% block messages_flash %}
	{% for message in app.session.flashbag.get('accueil') %}
		<div class="alert alert-info alert-dismissible" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		  Message flash : {{ message }}
		</div>
	{% endfor %}
{% endblock %}
    


{% block menu %}
	<h3>Accueil</h3>
	<ul class="nav nav-pills nav-stacked">
		<li><a href="{{ path('keeg_website_news') }}">News</a></li>
		<li><a href="{{ path('keeg_website_articles') }}">Articles</a></li>
		<li><a href="{{ path('keeg_website_temoignages') }}">Témoignages</a></li>
	</ul>
{% endblock %}

{% block keegwebsite_body %}

  	<h3> Bienvenue sur KEEG : L'info pour tous et toutes ! </h3>

  	<br />
	<div class="container-fluid well">
		<div class="col-lg-12">
			<div class="row">
				<div class="col-lg-12">
					<center>
						<div id="carousel" class="carousel slide">
							<ol class="carousel-indicators">
							    <li data-target="#carousel" data-slide-to="0" class="active"></li>
							    <li data-target="#carousel" data-slide-to="1"></li>
								<li data-target="#carousel" data-slide-to="2"></li>
							</ol>
							<div class="carousel-inner">
								<div class="item active"> <img src="{{ asset('image/chat2.jpg') }}"></div>
								<div class="item"> <img src="{{ asset('image/sonic.png') }}"> </div>
								<div class="item"> <img src="{{ asset('image/rainbow.png') }}"></div>
							</div>
						</div>
					</center>
				</div>
			</div>
		</div>

		
		
		<hr />

		<!-- Pour afficher deux news au hasard prises dans a BD -->
		<div class="row">
			<h4>News <a href="{{ path('keeg_website_news') }}"><i class="glyphicon glyphicon-chevron-right"></i></a></h4>
			<div class="col-md-12">
				<div class="row">
					{{ render(controller("KEEGArticleBundle:News:menu", {'limit': 2} )) }}
				</div>
			</div>
		</div>

		<hr />
		<!-- Pour afficher deux articles au hasard pris dans la BD -->
		<div class="row">
			<h4>Articles <a href="{{ path('keeg_website_articles') }}"><i class="glyphicon glyphicon-chevron-right"></i></a></h4>
			<div class="col-md-12">
				<div class="row">
					{{ render(controller("KEEGArticleBundle:Article:menu", {'limit': 2} )) }}
				</div>
			</div>
		</div>
		
		<hr />
		<!-- Pour afficher deux témoignages au hasard pris dans a BD -->
		<div class="row">
			<h4>Témoignages <a href="{{ path('keeg_website_temoignages') }}"><i class="glyphicon glyphicon-chevron-right"></i></a></h4>
			<div class="col-md-12">
				<div class="row">
					{{ render(controller("KEEGArticleBundle:Temoignage:menu", {'limit': 2} )) }}
				</div>
			</div>
		</div>
		

	</div>
 
{% endblock %}