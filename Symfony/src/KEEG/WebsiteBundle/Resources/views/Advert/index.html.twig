{% extends "KEEGWebsiteBundle::layout.html.twig" %}

{% block title %}
  Accueil {{ parent() }}
{% endblock %}

{% block messages_flash %}
  {% for message in app.session.flashbag.get('accueil') %}
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Message flash : {{ message }}
    </div>
  {% endfor %}
{% endblock %}
    


{% block menu %}
	<h3>Accueil</h3>
	<ul class="nav nav-pills nav-stacked">
		<li><a href="{{ path('keeg_website_news') }}">News</a></li>
		<li><a href="{{ path('keeg_website_articles') }}">Articles</a></li>
		<li><a href="{{ path('keeg_website_temoignages') }}">Témoignages</a></li>
	</ul>
{% endblock %}

