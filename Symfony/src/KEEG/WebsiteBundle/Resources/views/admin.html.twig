{# scr/KEEG/WebsiteBundle/Resources/views/structure.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">

  <title>{% block title %} - KEEG Project{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	<link rel="shortcut icon" href="{{ asset('image/k3d.png') }}">
	<link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
  {% endblock %}
</head>

<body>

  <div class="container">
  
	<!-- Static navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ path('keeg_website_homepage') }}">KEEGProject</a>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li class="active"><a href="{{ path('keeg_website_admin') }}"><i class="glyphicon glyphicon-home"></i> Index</a></li>
					<li><a href="{{ path('keeg_admin_news') }}">News</a></li>
					<li><a href="{{ path('keeg_admin_articles') }}">Articles</a></li>
					<li><a href="{{ path('keeg_admin_temoignages') }}">Témoignages</a></li>
					<li><a href="{{ path('keeg_admin_projects') }}">Projets</a></li>
				</ul>
            </div>
        </div>
    </nav>
	  
    <header class="jumbotron">
		<h1> KEEG : L'informatique pour tou-te-s </h1>
		<p>
			Panel d'administration
		</p>
		<p>
	        <a class="btn btn-primary btn-lg" href="{{ path('keeg_website_homepage') }}">
	            Retourner sur KEEG Project »
	        </a>
	    </p>
    </header>

    {% block messages_flash %}
    {% endblock %}
	
    {% block body %}
    <div class="row">

		<div id="menu" class="col-md-3">
			{% block menu %}
				<h3>Index</h3>
				<ul class="nav nav-pills nav-stacked">
					<li><a href="{{ path('keeg_admin_news') }}">News</a></li>
					<li><a href="{{ path('keeg_admin_articles') }}">Articles</a></li>
					<li><a href="{{ path('keeg_admin_temoignages') }}">Témoignages</a></li>
					<li><a href="{{ path('keeg_admin_projects') }}">Projets</a></li>
				</ul>
			{% endblock %}
		</div>
		<div id="content" class="col-md-9">
			{% block admin_body %}
			{% endblock %}
		</div>
    </div>
	{% endblock %}

    <hr>

    <footer>
      <p>The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
	
  </div>

  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	<script src="{{ asset('js/script.js') }}"></script>
	<script src="//cdn.ckeditor.com/4.4.7/standard/ckeditor.js"></script>
  {% endblock %}

</body>
</html>