{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{% extends "KEEGWebsiteBundle::admin.html.twig" %}

{% block title %}
  Accueil {{ parent() }}
{% endblock %}

{% block messages_flash %}
  {% for message in app.session.flashbag.get('admin') %}
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Message flash : {{ message }}
    </div>
  {% endfor %}
{% endblock %}

{% block admin_body %}
	<h2>Panel d'administration</h2><hr>

	<div class="row">
		<div class="col-lg-3">
			<a href="{{ path('keeg_admin_projects_add') }}">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> Nouveau projet
				</button>
			</a>
			<a href="{{ path('keeg_admin_articles_add') }}">
				<button type="button" class="btn btn-default btn-lg">
				  <span class=" glyphicon glyphicon-tag" aria-hidden="true"></span> Nouvel article
				</button>
			</a>
			<a href="#">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span> Nouveau témoignage
				</button>
			</a>
			<a href="#">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Nouvelle actualité
				</button>
			</a>
		</div>
	</div>
	
{% endblock %}