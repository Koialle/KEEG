{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{% extends "KEEGWebsiteBundle::admin.html.twig" %}

{% block title %}
  Accueil {{ parent() }}
{% endblock %}

{% block messages_flash %}
  {% for message in app.session.flashbag.get('admin') %}
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Message flash : {{ message }}
    </div>
  {% endfor %}
{% endblock %}
    
{% block menu %}
	<h3>Index</h3>
	<ul class="nav nav-pills nav-stacked">
		<li><a href="#">News</a></li>
		<li><a href="#">Articles</a></li>
		<li><a href="#">Témoignages</a></li>
		<li><a href="#">Projets</a></li>
	</ul>
{% endblock %}

{% block body %}
	<h2>Panel d'administration</h2><hr>

	<div class="row">
		<div class="col-lg-3">
			<a href="{{ path('keeg_activity_projects_add') }}">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> Ajouter un projet
				</button>
			</a>
			<a href="#">
				<button type="button" class="btn btn-default btn-lg">
				  <span class=" glyphicon glyphicon-tag" aria-hidden="true"></span> Ajouter un article
				</button>
			</a>
			<a href="#">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span> Ajouter un témoignage
				</button>
			</a>
			<a href="#">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Ajouter une actualité
				</button>
			</a>
		</div>
	</div>
{% endblock %}