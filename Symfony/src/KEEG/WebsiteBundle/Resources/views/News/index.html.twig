{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{% extends "KEEGWebsiteBundle::admin.html.twig" %}

{% block title %}
  Index {{ parent() }}
{% endblock %}

{% block messages_flash %}
  {% for message in app.session.flashbag.get('admin') %}
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Message flash : {{ message }}
    </div>
  {% endfor %}
{% endblock %}

{% block admin_body %}

	<h2>Panel d'administration</h2><hr>
	
	<a href="{{ path('keeg_admin_news_add') }}">
		<button type="button" class="btn btn-default btn-lg">
			<span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Nouvelle actualité
		</button>
	</a>

	<h3> Liste des actualités </h3>
	
	{% if listeItems|length > 0 %}
		<ul>
			{% for news in listeItems %}

				<li>
					<a href="{{ path('keeg_admin_news_view', {'id': news.id}) }}">
						{{ news.titre }}
					</a>
				</li>
				
			{% endfor %}
		</ul>

	{% else %}

		Aucune actualité n'a été trouvée.

	{% endif %}


{% endblock %}