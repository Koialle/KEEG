{# src/KEEG/WebsiteBundle/Resources/views/Advert/index.html.twig #}

{# On déclare que cette page étend structure.html.twig #} 
{% extends "KEEGWebsiteBundle::layout.html.twig" %}

{# On hérite cette balise de structure.html.twig pour personnaliser le header
en fonction de la page #} 
{% block title %}
	Accueil {{ parent() }}
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style>
  		.carousel-inner > .item > img,
  		.carousel-inner > .item > a > img {
      		height: 410px;
      		margin: auto;
  		}
  	</style>
{% endblock %}

{# On ajoute un bloc messages flashs qui sera utilisé pour afficher des messages
liés  l'envoi mails (par exemple) #} 
{% block messages_flash %}
	{% for message in app.session.flashbag.get('accueil') %}
		<div class="alert alert-info alert-dismissible" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		  Message flash : {{ message }}
		</div>
	{% endfor %}
{% endblock %}
    

{# Le bloc menu est hérité de la vue structure.html.twig #} 
{% block menu %}
	<h3>Accueil</h3>
	<ul class="nav nav-pills nav-stacked">
		<li><a href="{{ path('keeg_website_news') }}">News</a></li>
		<li><a href="{{ path('keeg_website_articles') }}">Articles</a></li>
		<li><a href="{{ path('keeg_website_temoignages') }}">Témoignages</a></li>
	</ul>
{% endblock %}

