		{{ form_widget(form.accroche, {'attr': {'class': 'form-control'}}) }}
	</div>

  </div>

  <div class="form-group">
  	
  	{# Génération du label. #}
  	{{ form_label(form.url, "Adresse du projet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

	{# Affichage des erreurs pour ce champ précis #}
