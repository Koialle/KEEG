		<div class="input-group">

			{# Génération de l'input #}
	      	<div class="input-group-addon">http://</div>
			{{ form_widget(form.image.url, {'attr': {'class': 'form-control'}}) }}
			
	    </div>
	</div>

  </div>

  <div class="form-group">
  	
  	{# Génération du label. #}
